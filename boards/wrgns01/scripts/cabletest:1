#!/bin/sh
# Cable test for WAN. See 'switch' for Port Mapping
#. /etc/config/defines
usage="Usage cabletest:1 [-g|-s] [xml node] {value}"
vctfile="/var/run/port1.vct"
case "$1" in
"-g")
	case "$2" in
	"txstatus")
		[ -f "$vctfile" ] && scut -p 'TXSTATUS=' $vctfile
		;;
	"txmeter")
		[ -f "$vctfile" ] && scut -p 'TXMETER=' $vctfile
		;;
	"rxstatus")
		[ -f "$vctfile" ] && scut -p 'RXSTATUS=' $vctfile
		;;
	"rxmeter")
		[ -f "$vctfile" ] && scut -p 'RXMETER=' $vctfile
		;;
	esac
	;;
"-s")
	[ -f "$vctfile" ] && rm -f "$vctfile"
	ctest -i 4 > $vctfile
	rgdb -i -s /runtime/cabletest:1/txstatus	`scut -p 'STATUS=' $vctfile`
	rgdb -i -s /runtime/cabletest:1/txmeter		`scut -p 'METER=' $vctfile`
	rgdb -i -s /runtime/cabletest:1/rxstatus	`scut -p 'STATUS=' $vctfile`
	rgdb -i -s /runtime/cabletest:1/rxmeter		`scut -p 'METER=' $vctfile`
	;;
*)
	echo $usage
	;;
esac
